<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {title: "" })%>
    <%- include('../partials/header.ejs')%>
  <div class="container">
    <form action="/proyectos/register" method="POST" class="mt-3">
      <div class="row mb-3">
        <label for="name" class="col-2 col-form-label">
          Nombre del proyecto:
        </label>
        <div class="col-10">
          <input type="text" id="name" class="form-control" />
        </div>
      </div>
      <div class="row mb-3">
        <label for="date" class="col-2 col-form-label">
          Fecha de inicio:
        </label>
        <div class="col-2">
          <input type="date" id="date" class="form-control" />
        </div>
      </div>
      <div class="row mb-3">
        <label for="involved" class="col-2 col-form-label">
          Personal Asignado:
        </label>
        <div class="col-10">
          <div class="form-check">
            <% for (let i=0; i<personal.length; i++) { %>
            <label for="involved<%= [i] %>" class="form-check-label">
              <input type="checkbox" id="involved<%= [i] %>" class="form-check-input" name="personal" />
              <%= personal[i].nombre %>
            </label>
            <br>
            <% } %>
          </div>
        </div>
      </div>
      <div>
        <button type="submit" class="btn btn-primary">
          Guardar Proyecto
        </button>
      </div>
    </form>
  </div>
</body>

</html>
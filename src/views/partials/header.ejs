<header>
  <nav class="navbar navbar-expand-lg" style="background-color: #e3f2fd">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"
        ><img
          src="/images/dev4it_iso_naranja_2.png"
          alt="imagen del logo"
          class="logo"
      /></a>

      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if( locals.isLogged ){ %>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img
                src="<%= locals.userLogged.avatar %>"
                alt="Logo"
                width="30"
                height="24"
                class="d-inline-block align-text-top"
              />
            </a>
            <ul class="dropdown-menu">
              <li class="nav-item">
                <a class="nav-link dropdown-item" href="/personal/logout"
                  >logout</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link dropdown-item" href="/personal/profile/:id"
                  >profile</a
                >
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/personal"
              >Personal</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/proyectos"
              >Proyectos</a
            >
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/personal/login">login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/personal/register">register</a>
          </li>
          <% } %>
        </ul>

        <% if( locals.isLogged ){ %>
        <form
          action="/personal/search"
          method="GET"
          class="d-flex navForm"
          role="search"
        >
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search users"
            aria-label="Search"
            name="search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>


        <form
          action="/proyectos/search"
          method="GET"
          class="d-flex"
          role="search"
        >
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search proyects"
            aria-label="Search"
            name="search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"
  ></script>
</header>

<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', {title: " - Personal" })%>
  <body>
    <%- include('../partials/header.ejs')%>
    <main>
      <label for="active" class="labels-list"> Personal: </label>
      <ul class="list-group" id="active">
        <% for( let i = 0; i < listado.length; i++ ) { %> <%
        if(listado[i].active === true){ %>

        <li>
          <a
            href="/personal/detail/<%= listado[i].id %>"
            class="list-group-item list-group-item-action"
            ><%= listado[i].name %>
          </a>
        </li>

        <% }} %>
      </ul>

      <br />
      <br />

      <% if (locals.userLogged.admin) { %>
      <label for="inactive" class="labels-list"> Personal Inactivo: </label>
      <ul class="list-group" id="inactive">
        <% for( let i = 0; i < listado.length; i++ ) { %> <%
        if(listado[i].active === false){ %>

        <li>
          <a
            href="/personal/detail/<%= listado[i].id %>"
            class="list-group-item list-group-item-action"
            ><%= listado[i].name %>
          </a>
        </li>

        <% } %> <% } %>
      </ul>
      <% } %>

      <br />
      <br />

      <div class="buttonPanel">
        <form action="/" method="GET">
          <button type="submit" class="btn btn-primary">Volver</button>
        </form>
        <form action="/personal/register" method="GET">
          <button type="submit" class="btn btn-success">Nuevo usuario</button>
        </form>
      </div>
    </main>
  </body>
</html>
